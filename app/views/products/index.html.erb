<h1>All Products</h1>
<%= link_to 'Cart', cart_path %>
<br><br>
<%= link_to 'Products on Sale', products_path(sale_status: 'yes') %>
<br>
<%= link_to 'New Products', products_path(new_product: "yes") %>
<br>
<%= link_to 'Recently Updated Products', products_path(recently_updated: "yes") %>
<br><br>
<ul>
  <% @products.each do |product| %>
    <li><%= product.id %> | <%= link_to product.name, product_path(product) %> </li>
    <% if @cart.include?(product) %>
      <p>Product is in your cart - <%= button_to 'remove from cart', remove_from_cart_product_path(product.id), method: :delete %></p>
      
    <% else %>
      <%= form_with url: add_to_cart_path(product.id), method: :post do |form| %>
      <%= form.number_field :quantity, value: 1, min: 1 %>
      <%= form.submit "Add to cart" %>
    <% end %>

    <% end %>
  <% end %>
</ul>
<%= paginate @products %>
