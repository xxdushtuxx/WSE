<%= form_with url: non_user_address_path, method: :get, class: 'needs-validation', novalidate: true do |form| %>
  <div class="mb-3">
    <%= form.label :address, class: 'form-label' %>
    <%= form.text_field :address, class: 'form-control', required: true %>
  </div>
  <div class="mb-3">
    <%= form.label :city, class: 'form-label' %>
    <%= form.text_field :city, class: 'form-control', required: true %>
  </div>
  <div class="mb-3">
    <%= form.label :postal_code, class: 'form-label' %>
    <%= form.text_field :postal_code, class: 'form-control', required: true %>
  </div>
  <div class="mb-3">
    <%= form.label :province_id, class: 'form-label' %>
    <%= form.select :province_id, options_for_select(Province.all.map { |province| [province.name, province.id] }), { prompt: 'Select Province', class: 'form-select', required: true } %>
  </div>
  <div class="mb-3">
    <%= form.submit "Save Address", class: 'btn btn-primary' %>
  </div>
<% end %>
